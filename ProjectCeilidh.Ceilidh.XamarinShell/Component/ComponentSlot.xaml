<?xml version="1.0" encoding="UTF-8"?>
<TemplatedView
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="ProjectCeilidh.Ceilidh.XamarinShell.Component.ComponentSlot" x:Name="Parent">
    <TemplatedView.GestureRecognizers>
        <TapGestureRecognizer Command="{Binding Source={x:Reference Parent}}"></TapGestureRecognizer>
    </TemplatedView.GestureRecognizers>
    <TemplatedView.ControlTemplate>
        <ControlTemplate>
            <StackLayout Orientation="Vertical">
                <Label HorizontalOptions="Center" VerticalOptions="Center" Text="Click to place a component here..." />
            </StackLayout>
        </ControlTemplate>
    </TemplatedView.ControlTemplate>
</TemplatedView>